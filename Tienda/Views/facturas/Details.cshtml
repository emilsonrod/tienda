@model Tienda.Models.factura

@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles</h2>

<div>
    <h4>factura</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FECHA_FACTURA)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FECHA_FACTURA)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.cliente.ID_CLIENTE)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cliente.ID_CLIENTE)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.empleado.ID_EMPLEADO)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.empleado.ID_EMPLEADO)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.sucursal.NOMBRE_SUCURSAL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.sucursal.NOMBRE_SUCURSAL)
        </dd>

    </dl>
    <div class="form-group col-md-12">
        <table id="tablaDetalleProductos" class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Cantidad</th>
                    <th scope="col">Producto</th>
                    <th scope="col">Precio Unitario</th>
                    <th scope="col">Subtotal</th>
                </tr>
            </thead>
            <tbody id="bodyTableDetalle">
                @foreach (var producto in Model.factura_producto)
                {
                    if (producto.PRECIO_TOTAL_PRODUCTO != 0)
                    {
                        <tr>
                            <td>@producto.CANTIDAD_PRODUCTO</td>
                            <td>
                                @producto.producto.NOMBRE_PRODUCTO
                            </td>
                            <td>@producto.producto.VENTA_PRODUCTO</td>
                            <td>@producto.PRECIO_TOTAL_PRODUCTO</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <div class="total-detail col-md-12">
            <div class="control-derecho form-inline">
                @Html.Label("Total Compra")
                @Html.EditorFor(model => model.PRECIO_TOTAL, new { htmlAttributes = new { @class = "form-control" } })
            </div>            
        </div>
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Editar", "Edit", new { id = Model.ID_FACTURA }) |
        @Html.ActionLink("Regresar a Lista", "Index")
    </div>
</div>


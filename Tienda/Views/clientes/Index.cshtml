@model IEnumerable<Tienda.Models.cliente>

@{
    ViewBag.Title = "Lista Clientes";
}

<h2>Lista Clientes</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.persona.PRIMER_NOMBRE_PERSONA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.persona.PRIMER_NOMBRE_PERSONA)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.ID_CLIENTE }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.ID_CLIENTE }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.ID_CLIENTE })
        </td>
    </tr>
}

</table>
